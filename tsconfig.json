{
  "typeRoots": [
    "./types",
    "./node_modules/@types"
  ],
  "compilerOptions": {
    "resolveJsonModule": true,
    "allowJs": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
  },
  "include": ["./src/**/*.*"],
  "exclude": ["node_modules", "dist"]
}
